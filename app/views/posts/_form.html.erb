<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :category %>
    <%= f.input :title %>
    <%= f.input :content, input_html: { rows: 5 } %>
    <%= f.input :tag_list %>
    <%= f.input :published %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'button small radius' %>
  </div>
<% end %>
